<!-- Layout file for the activity to configure the measure height.  -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/height_text" />

  <LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1">

    <EditText android:id="@+id/height_entry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:defaultValue="@string/height_default"
        android:inputType="numberDecimal" />

    <Button android:id="@+id/buttonDrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height_button_drop" />
  
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <Button android:id="@+id/buttonOk"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:text="@android:string/ok" />

    <Button android:id="@+id/buttonCancel"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:text="@android:string/cancel" />

  </LinearLayout>

</LinearLayout>
